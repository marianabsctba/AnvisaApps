<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.UserQuizActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listagem_minhas_aval"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/user_items_aval" />

    <Button
        android:id="@+id/btn_voltar_minhas_aval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="RETORNAR"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/listagem_minhas_aval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/empty_minhas_aval"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="AINDA NÃƒO CADASTROU QUIZ"
        android:fontFamily="arial"
        android:textSize="28sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>